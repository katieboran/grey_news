<div class="page-header">
  <h3>News Source #<%= @news_source.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Category</dt>
      <dd><%= @news_source.category %></dd>

      <dt>Description</dt>
      <dd><%= @news_source.description %></dd>

      <dt>Location</dt>
      <dd><%= @news_source.location %></dd>

      <dt>Date founded</dt>
      <dd><%= @news_source.date_founded %></dd>

      <dt>Ownership</dt>
      <dd><%= @news_source.ownership %></dd>

      <dt>Image</dt>
      <dd><img src="<%= @news_source.image %>" class="img-responsive"></dd>

      <dt>Website</dt>
      <dd><%= @news_source.website %></dd>

      <dt>Name</dt>
      <dd><%= @news_source.name %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/news_sources" class="btn btn-primary">
        Back
      </a>
      <a href="/news_sources/<%= @news_source.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_news_source/<%= @news_source.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>

<!-- A News source has many bias_ratings -->

<div class="row">
  <div class="col-md-12">
    <ul class="list-group">
      <li class="list-group-item list-group-item-info">
        Bias_ratings
      </li>

      <% @news_source.bias_ratings.each do |bias_rating| %>
        <li class="list-group-item">
          <a href="/bias_ratings/<%= bias_rating.id %>">
            <%= bias_rating.user_id %>
          </a>
          <div class="btn-group btn-group-xs pull-right">
            <a href="/bias_ratings/<%= bias_rating.id %>" class="btn btn-primary">
              <i class="fa fa-search-plus"></i>
            </a>
            <a href="/bias_ratings/<%= bias_rating.id %>/edit" class="btn btn-warning">
              <i class="fa fa-edit"></i>
            </a>
            <a href="/delete_bias_rating/<%= bias_rating.id %>" class="btn btn-danger" rel="nofollow">
              <i class="fa fa-trash-o"></i>
            </a>
          </div>
        </li>
      <% end %>

      <li class="list-group-item">
        <form action="/create_bias_rating" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for user_id -->
      <input type="hidden" name="user_id" value="<%= current_user.id %>">

      <!-- Label and input for news_source_id -->
      <div class="form-group">
        <label for="news_source_id" class="control-label">
          News source
        </label>

        <%= select_tag(:news_source_id, options_from_collection_for_select(NewsSource.all, :id, :category), :class => "form-control") %>
      </div>

      <!-- Label and input for rating -->
      <div class="form-group">
        <label for="rating" class="control-label">
          Rating
        </label>

        <input type="text" id="rating" name="rating" placeholder="Rating" class="form-control" value="">
      </div>

      <button class="btn btn-block btn-success">
        Create Bias Rating
      </button>
    </form>
      </li>
    </ul>
  </div>
</div>

