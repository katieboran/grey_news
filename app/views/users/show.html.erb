<div class="page-header">
  <h3>User #<%= @user.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Username</dt>
      <dd><%= @user.username %></dd>

      <dt>Political party</dt>
      <dd><%= @user.political_party %></dd>

      <dt>Nationality</dt>
      <dd><%= @user.nationality %></dd>

      <dt>Gender</dt>
      <dd><%= @user.gender %></dd>

      <dt>Age</dt>
      <dd><%= @user.age %></dd>

      <dt>Email</dt>
      <dd><%= @user.email %></dd>

      <dt>Password</dt>
      <dd><%= @user.password %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/users" class="btn btn-primary">
        Back
      </a>
    </div>
  </div>
</div>

<!-- A User has many bias_ratings -->

<div class="row">
  <div class="col-md-12">
    <ul class="list-group">
      <li class="list-group-item list-group-item-info">
        Bias_ratings
      </li>

      <% @user.bias_ratings.each do |bias_rating| %>
        <li class="list-group-item">
          <a href="/bias_ratings/<%= bias_rating.id %>">
            <%= bias_rating.user_id %>
          </a>
          <div class="btn-group btn-group-xs pull-right">
            <a href="/bias_ratings/<%= bias_rating.id %>" class="btn btn-primary">
              <i class="fa fa-search-plus"></i>
            </a>
            <a href="/bias_ratings/<%= bias_rating.id %>/edit" class="btn btn-warning">
              <i class="fa fa-edit"></i>
            </a>
            <a href="/delete_bias_rating/<%= bias_rating.id %>" class="btn btn-danger" rel="nofollow">
              <i class="fa fa-trash-o"></i>
            </a>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>

