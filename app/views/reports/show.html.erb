<div class="page-header">
  <h3>Report #<%= @report.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>User</dt>
      <dd><%= @report.user_id %></dd>

      <dt>Content</dt>
      <dd><%= @report.content %></dd>

      <dt>Article link</dt>
      <dd><%= @report.article_link %></dd>

      <dt>News source</dt>
      <dd><%= @report.news_source_id %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/reports" class="btn btn-primary">
        Back
      </a>
      <a href="/reports/<%= @report.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_report/<%= @report.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
