<div class="page-header">
  <h1>
    News sources
    <a href="/news_sources/new" class="btn btn-lg btn-success">New News source</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Category</th>
        <th>Description</th>
        <th>Location</th>
        <th>Date founded</th>
        <th>Ownership</th>
        <th>Image</th>
        <th>Website</th>
        <th>Name</th>
        <th>Actions</th>
      </tr>

      <% @news_sources.each do |news_source| %>
      <tr>
        <td><%= news_source.category %></td>
        <td><%= news_source.description %></td>
        <td><%= news_source.location %></td>
        <td><%= news_source.date_founded %></td>
        <td><%= news_source.ownership %></td>
        <td><img src='<%= news_source.image %>' class='img-responsive'></td>
        <td><%= news_source.website %></td>
        <td><%= news_source.name %></td>
        <td>
          <a href="/news_sources/<%= news_source.id %>" class="btn btn-primary">Show</a>
          <a href="/news_sources/<%= news_source.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_news_source/<%= news_source.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @news_sources, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
