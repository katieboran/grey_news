<div class="page-header">
  <h3>Comment #<%= @comment.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>User</dt>
      <dd>
        <% if @comment.user.present? %>
          <a href="/users/<%= @comment.user_id %>">
            <%= @comment.user.created_at %>
          </a>
        <% end %>
      </dd>

      <dt>Content</dt>
      <dd><%= @comment.content %></dd>

      <dt>News source</dt>
      <dd>
        <% if @comment.news_source.present? %>
          <a href="/news_sources/<%= @comment.news_source_id %>">
            <%= @comment.news_source.category %>
          </a>
        <% end %>
      </dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/comments" class="btn btn-primary">
        Back
      </a>
      <a href="/comments/<%= @comment.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_comment/<%= @comment.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
